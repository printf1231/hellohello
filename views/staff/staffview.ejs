<link rel="stylesheet" href="/stylesheets/editstaff.css">

<% if (message) { %>
  <p class="text-center text-danger"><%= message %></p>
<% } %>

<% if (staff) { %>
<form action="" method="post" enctype="multipart/form-data">
<div class="staffAdd">
        <div class="goback">
             <a href="/home">Mariano Marcos State University</a>
             <a href="/staff">Staff</a>
         </div>
 
    <div class="addstaff">
        <div>
            <div class="previewstaff">
                    <div class="gallery"><img src="/assets/staffs/<%=staff.image%>" alt=""></div>
             </div>
            
        </div>
      <div class="staffDetail">
        <div class="name">
            <input type="text" placeholder="First Name" name="first" value="<%=staff.first%>" required>
            <input type="text" placeholder="Middle Name" name="mid" value="<%=staff.mid%>" required>
            <input type="text" placeholder="Surname" name="last" value="<%=staff.last%>" required>
        </div>
        <div class="other">
            <input id="age" type="number" placeholder="Age" name="age" value="<%=staff.age%>" required>
            <input id="pos" type="text" placeholder="Position" name="position" value="<%=staff.position%>" required>
            <input id="id" type="text" placeholder="Identification Number" name="idNumber" value="<%=staff.idNumber%>" required>
            <br>
            <div class="other"><br>
                <input id="contact" type="number" placeholder="contact number" name="contact" value="<%=staff.contact%>" required>
                <input id="email" type="email" placeholder="email address" name="email" value="<%=staff.email%>" required>
            </div><br>
            <div class="other">
                    <input id="address" type="text" placeholder="home address" name="address" value="<%=staff.address%>" required>
            </div>
            <div class="actions">
                
                <button type="submit" class="button">Update</button>
                <div><a href="/staff/delete/<%= staff.id %>" class="deleteStaff">Delete</a></div>
        </div>
        </div>
       
      </div>
  
    </div> 

</div>
</form>
<% } else { %>
    <p class="text-center">No Staffs Found. Go <a href="/staff/add-staff">here</a> to add.</p>
<% } %>